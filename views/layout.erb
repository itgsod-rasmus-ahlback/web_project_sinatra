<body onload="Load()">
	<div id="content">
		<div id="head" class="margined">
			
			<div>
				<h1 class="header_line"><a href="/" class="no_decor"><i>Vivamos - <%= @page.gsub("_"," ") %></i></a></h1>
			</div>

				<% 	top_links = [
						"Specialresor",
						"Latindans","Om oss", "Teknisk konsultverksamhet", "Kontakt"
					] %>

			<div id="top_menu">
				<ul id="top_menu_links" class="links in_line">
					<li><a href="/">Hem</a></li>
					<% top_links.each do |object| %>
					<% if object == @page %>
					<% make_link = "active_link" %>
					<% else make_link = "non_link" %>
					<% end %>
					<li><a href="/<%=object.downcase%>" id="<%=object%>" class="<%=make_link%>"><%= object%></a></li>
					<% end %>
				</ul>
			</div>
		</div>

		<div id="main_content_holder" class="margined">
		<div id="sidebar" class="margined">
			
		</div>
			<%= yield %>
		</div>
		<div id="bottom_menu" class="margined">
			<center>

			<% lista = ["Om oss", "Konsumentvagledning", "Teknisk konsultverksamhet", "Kontakt"] %>

				<ul class="links in_line ">

					<% lista.each do |object| %>
					<li> <a href="<%=object.downcase.gsub(" ", "_")%>"><%= object.gsub("Konsumentvagledning", "Konsumentvägledning") %></a> </li>
					<% end %>

				</ul>
				<p class="main_text bottom_text">vivamos.nu    Org nr 520720-3331   Godkänd för F-skatt   Innehar statlig resegaranti ställd hos Kammarkollegiet
Kontakt Torsten Carlsson   tfn 0738 146141   e-mail <a href="mailto:torstencarlsson@vivamos.nu">torstencarlsson@vivamos.nu</p>
			</center>
		</div>
	</div>
</body>
</html>